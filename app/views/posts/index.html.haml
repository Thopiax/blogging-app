.site_wrapper
  #main.container
    #home
      .table#diary_table
        #diary
          #prompts
          = render 'form'
          
      #prototype.post
        .row
          .col-md-2
            .post_datetime
              .post_date
                #{@current_date}
              .post_time
                #{@current_time}
          .col-md-8
            .post_content
            #carousel
              %a.prev.command
                = evil_icon 'ei-arrow-left'
              .keyword
                %p
              %a.next.command
                = evil_icon 'ei-arrow-right'
              %ul#imageCarousel
                - (0..2).each do |i|
                  %li{id: "image#{i}"}
                    = image_tag '', alt: ""
          .col-md-2
            .post_sentiment_emoji
              üòê
        .row
          .col-md-2
          .col-md-10
            .post_emojis

    .timeline
      %h2
        Your Timeline
      - if @posts.length == 0
        %p
          Your timeline seems to be empty! Write something in the form above.
      - else
        - @posts.reverse_each do |post|
          .post
            .row
              .col-md-2
                .post_datetime
                  .post_date
                    #{@current_date}
                  .post_time
                    #{@current_time}
              .col-md-8
                .post_content
                  = simple_format(post.message)
              .col-md-2
                .post_sentiment_emoji
                  üòê
            .row
              .col-md-2
                .post_delete_button
                  = button_to "Delete", post_path(post), method: :delete
              .col-md-10
                .post_emojis
